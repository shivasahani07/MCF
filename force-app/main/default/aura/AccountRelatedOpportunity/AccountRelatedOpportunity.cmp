                                        <div class="slds-popover slds-popover_tooltip slds-nubbin_top-right slds-hide" role="tooltip" id="help-3" style="position:absolute;top:80px;right:30px">
                                            <div class="slds-popover__body"></div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            
                           
                        </ul>
                    </div>
                </div>
                
            </div>
        
        
    </lightning:card>
    </div>   
    
 

    
	
</aura:component>