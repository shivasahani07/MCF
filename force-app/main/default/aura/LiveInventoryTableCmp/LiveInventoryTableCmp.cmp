<aura:component controller="LiveInventoryController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="livInvList" type="Store_Inventory__c[]"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    
    
    <lightning:layout >
        <lightning:layoutItem size="12">
            <div class="slds-m-around--xxx-large">
                <lightning:card>
                    <aura:set attribute="title">
                        Live Inventory
                    </aura:set>
                    
                    <table class="slds-table slds-table_cell-buffer slds-table_bordered">
                        <thead>
                            <tr class="slds-line-height_reset slds-text-title_caps">
                                <th  class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="Sr.No">
                                        Sr.No
                                    </div>
                                </th>
                                <th  class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="Product Name">
                                        Product Name
                                    </div>
                                </th>
                                <th class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="Product Code">
                                        Product Code
                                    </div>
                                </th>
                                <th class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="isItemAvailable">
                                        is Item Available
                                    </div>
                                </th>
                                <th class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="AvailableQuantity">
                                        Available Quantity/Amount
                                    </div>
                                </th>
                                <th class="slds-is-resizable" scope="col">
                                    <div class="slds-truncate" title="AvailableLocation">
                                        Available Location
                                    </div>
                                </th>
                                
                            </tr>
                        </thead>
                        <aura:if isTrue="{!v.livInvList.length > 0}">
                            <tbody>
                                <aura:iteration items="{!v.livInvList}" var="linv" indexVar ="i">
                                    <tr class="slds-hint-parent">
                                        
                                        <th data-label="Sr.No" scope="row">
                                            <div class="slds-truncate" title="{!linv.SrNo}">{!i+1}</div>
                                        </th>
                                        <td data-label="Product Name">
                                            <div class="slds-truncate" title="{!linv.Name}">{!linv.Dealer_Product__r.Product__r.Name}</div>
                                        </td>
                                        <td data-label="Product Code">
                                            <div class="slds-truncate" title="{!linv.ProductCode}">{!linv.Dealer_Product__r.Product__r.ProductCode}</div>
                                        </td>
                                        <td data-label="is Item Available">
                                            <div class="slds-truncate" title="{!linv.is_Item_Available__c}">{!linv.is_Item_Available__c}</div>
                                        </td>
                                        <td data-label="Available Amount/Quantity">
                                            <div class="slds-truncate" title="{!linv.ProductCode}">{!linv.ProductCode}</div>
                                        </td>
                                        <td data-label="Available Location">
                                            <div class="slds-truncate" title="{!linv.Store__c}">{!linv.Store__r.Name}</div>
                                        </td>
                                        
                                        
                                    </tr>
                                </aura:iteration>
                            </tbody>
                        </aura:if>
                    </table>
                    <aura:if isTrue="{!empty(v.livInvList)}">
                        <div class="slds-align_absolute-center">
                            No records found
                        </div>
                    </aura:if>
                </lightning:card>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>